#!groovy

properties([
    [
        $class       : 'GithubProjectProperty',
        displayName  : 'Terms and Conditions Microservice',
        projectUrlStr: 'https://github.com/hmcts/rpx-xui-terms-and-conditions'
    ],
    pipelineTriggers([
        [$class: 'GitHubPushTrigger']
    ])
])

